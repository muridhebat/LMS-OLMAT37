<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="app-title">LMS OLMAT37</div>
    </div>

    <!-- Loading Indicator -->
    <div class="loading" id="loading">
      <div class="spinner"></div>
      <p>Memuat aplikasi...</p>
    </div>

    <!-- Error Container -->
    <div class="error-container" id="errorContainer">
      <div class="error-icon">⚠️</div>
      <div class="error-title">Gagal Memuat Aplikasi</div>
      <div class="error-message" id="errorMessage">
        Tidak dapat terhubung ke server. Pastikan Anda terhubung ke internet.
      </div>
      <div>
        <button class="retry-btn" onclick="loadApp()">Coba Lagi</button>
        <button class="retry-btn" onclick="openDirect()" style="background: #4CAF50;">Buka Langsung</button>
      </div>
    </div>

    <!-- Iframe Container -->
    <div class="iframe-container">
      <iframe
        id="appFrame"
        src=""
        allow="fullscreen; camera; microphone; display-capture; geolocation;"
        allowfullscreen
        scrolling="yes"
        sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-modals">
      </iframe>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>© 2026 bermatematika.com.</p>
    </div>

    <!-- BAGIAN CONTROL BUTTONS SUDAH DIHAPUS -->
  </div>

  <script>
    // URL Google Apps Script Anda
    const APP_URL = "https://script.google.com/macros/s/AKfycbwks8R1rthyyWLRa0QkgtRBgWJ95X4WSaADhWNJ_LDNSAo0s2gxwjuVncwXwT6t7mYr/exec";
    
    // Elemen DOM
    const appFrame = document.getElementById('appFrame');
    const loading = document.getElementById('loading');
    const errorContainer = document.getElementById('errorContainer');
    const errorMessage = document.getElementById('errorMessage');
    
    // Waktu timeout (dalam milidetik)
    const LOAD_TIMEOUT = 15000;
    
    // Load aplikasi saat halaman dimuat
    window.addEventListener('DOMContentLoaded', loadApp);
    
    // Fungsi untuk memuat aplikasi
    function loadApp() {
      // Tampilkan loading, sembunyikan error
      loading.style.display = 'block';
      errorContainer.style.display = 'none';
      
      // Set iframe source
      appFrame.src = APP_URL;
      
      // Set timeout jika loading terlalu lama
      const timeoutId = setTimeout(() => {
        showError("Waktu tunggu habis. Server mungkin sedang lambat atau tidak tersedia.");
      }, LOAD_TIMEOUT);
      
      // Event listener ketika iframe berhasil load
      appFrame.addEventListener('load', function() {
        clearTimeout(timeoutId);
        loading.style.display = 'none';
        console.log('Aplikasi berhasil dimuat');
      });
      
      // Event listener untuk error
      appFrame.addEventListener('error', function() {
        clearTimeout(timeoutId);
        showError("Gagal memuat aplikasi. Cek koneksi internet Anda.");
      });
    }
    
    // Fungsi untuk menampilkan error
    function showError(message) {
      loading.style.display = 'none';
      errorMessage.textContent = message;
      errorContainer.style.display = 'flex';
      appFrame.src = ''; // Kosongkan iframe
    }
    
    // Fungsi untuk refresh aplikasi
    function refreshApp() {
      loadApp();
    }
    
    // Fungsi untuk buka langsung di tab baru
    function openDirect() {
      window.open(APP_URL, '_blank');
    }
    
    // Fungsi untuk toggle fullscreen (Tidak dipakai karena tombol dihapus)
    function toggleFullscreen() {
      const container = document.querySelector('.container');
      
      if (!document.fullscreenElement) {
        if (container.requestFullscreen) {
          container.requestFullscreen();
        } else if (container.webkitRequestFullscreen) {
          container.webkitRequestFullscreen();
        } else if (container.msRequestFullscreen) {
          container.msRequestFullscreen();
        }
      } else {
        if (document.exitFullscreen) {
          document.exitFullscreen();
        } else if (document.webkitExitFullscreen) {
          document.webkitExitFullscreen();
        } else if (document.msExitFullscreen) {
          document.msExitFullscreen();
        }
      }
    }
    
    // Deteksi jika keluar dari fullscreen
    document.addEventListener('fullscreenchange', handleFullscreenChange);
    document.addEventListener('webkitfullscreenchange', handleFullscreenChange);
    document.addEventListener('msfullscreenchange', handleFullscreenChange);
    
    function handleFullscreenChange() {
      // Tambahkan logika jika perlu saat keluar fullscreen
    }
    
    // Deteksi perubahan koneksi
    window.addEventListener('online', function() {
      console.log('Koneksi internet tersedia');
      // Jika error tampil, coba reload otomatis
      if (errorContainer.style.display === 'flex') {
        loadApp();
      }
    });
    
    window.addEventListener('offline', function() {
      console.log('Koneksi internet terputus');
      showError("Koneksi internet terputus. Periksa jaringan Anda.");
    });
    
    // Cek koneksi saat pertama kali load
    if (!navigator.onLine) {
      showError("Anda sedang offline. Periksa koneksi internet Anda.");
    }
    
    // Optional: Auto-refresh setiap 5 menit untuk sinkronisasi data
    setInterval(() => {
      if (document.visibilityState === 'visible' && !errorContainer.style.display === 'flex') {
        console.log('Auto-refresh aplikasi');
        appFrame.contentWindow.location.reload();
      }
    }, 300000); // 5 menit
  </script>
</body>
</html>
