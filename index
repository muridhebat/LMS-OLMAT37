      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      overflow: hidden;
    }

    .container {
      width: 100%;
      height: 100vh;
      height: 100dvh;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    .header {
      background: rgba(0, 0, 0, 0.2);
      padding: 15px 20px;
      color: white;
      text-align: center;
      display: none; /* Sembunyikan dulu, bisa ditampilkan jika perlu */
    }

    .app-title {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .iframe-container {
      flex: 1;
      width: 100%;
